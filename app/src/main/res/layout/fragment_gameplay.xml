<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameplayFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_playFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline_playFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />


    <Button
        android:id="@+id/btn_hit"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_hit"
        android:fontFamily="@font/poppins_bold_italic"
        android:text="Hit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vertical_guideline_playFragment" />

    <Button
        android:id="@+id/btn_stand"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_stand"
        android:fontFamily="@font/poppins_bold_italic"
        android:text="Stand"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_playFragment" />


    <Button
        android:id="@+id/btn_double"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_double"
        android:fontFamily="@font/poppins_bold_italic"
        android:text="Double"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_hit" />

    <Button
        android:id="@+id/btn_split"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_split"
        android:fontFamily="@font/poppins_bold_italic"
        android:text="Split"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_stand" />


    <LinearLayout
        android:id="@+id/handsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_stand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.blackjack21.PlayerHandView
            android:id="@+id/first_hand"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>